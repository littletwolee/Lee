<header>
    <link href="~/Content/jquery.mobile-1.4.3.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.mobile-1.4.3.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btn").click(function () {
                $.ajax({
                    type: 'GET',
                    data: { username: $("#username").val(), userpwd: $("#userpwd").val() },
                    url: 'api/Users/Login',
                    dataType: 'json',
                    success: function (data, textStatus) {
                        alert(data);
                    },
                    error: function (xmlHttpRequest, textStatus, errorThrown) {
                    }
                });
            });
        })
        
    </script>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/">ASP.NET Web API</a></p>
        </div>
    </div>
</header>
<div id="body">
    <input id="username" type="text" />
    <input id="userpwd" type="text" />
    <input id="btn" type="button" value="确定" />
</div>

